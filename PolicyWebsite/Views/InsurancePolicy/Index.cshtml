@model IEnumerable<Website.PolicyWebsite.Models.DisplayPolicy>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/modal.js")"></script>
}

<div class="row form-group">
    <div class="col-lg-12">
        <button id="addBtn" class="btn btn-lg add">Add New Policy</button>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PolicyNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InsuredName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EffectiveDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Expiration)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsuredName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expiration)
            </td>
        </tr>
    }

</table>

<div id='addPolicyFormModal'>
</div>


