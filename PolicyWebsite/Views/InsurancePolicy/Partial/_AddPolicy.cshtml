@model Website.PolicyWebsite.Models.AddPolicy

<div id="validationError"></div>

@using (Html.BeginForm("add", "InsurancePolicy", FormMethod.Post, new { Id = "addPolicyForm" }))
{
    <div id="smartwizard">
        <ul>
            <li><a href="#step-1">Policy Number<br /></a></li>
            <li><a href="#step-2">Start/End Dates<br /></a></li>
            <li><a href="#step-3">Policy Holder<br /></a></li>
            <li><a href="#step-4">Property Location<br /></a></li>
            <li><a href="#step-5">Property Details<br /></a></li>
        </ul>

        <div>
            <div id="step-1" class="">
                <div class="form-group row">
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.PolicyNumber)
                        @Html.EditorFor(model => model.PolicyNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Policy Number", onfocus = "(this.type='number')", onblur = "(this.type='text')" } })
                    </div>
                </div>
            </div>
            <div id="step-2" class="">
                <div class="form-group row">
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.EffectiveDate)
                        <div id="start_date"></div>
                    </div>

                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.ExpireDate)
                        <div id="end_date"></div>
                    </div>
                </div>
            </div>
            <div id="step-3" class="">
                <div class="form-group row">
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.FirstName)
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
                    </div>
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.LastName)
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.Street)
                        @Html.EditorFor(model => model.Street, new { htmlAttributes = new { @class = "form-control", placeholder = "Street Address" } })
                    </div>
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.City)
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", placeholder = "City" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.State)
                        @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control", placeholder = "State", maxlength = 2 } })

                    </div>
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.Zip)
                        @Html.EditorFor(model => model.Zip, new { htmlAttributes = new { @class = "form-control", placeholder = "Zip", maxlength = 9 } })

                    </div>
                </div>

            </div>
            <div id="step-4" class="">
                <div class="form-group row">
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.BuildingStreet)
                        @Html.EditorFor(model => model.BuildingStreet, new { htmlAttributes = new { @class = "form-control", placeholder = "Building Address" } })
                    </div>
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.BuildingCity)
                        @Html.EditorFor(model => model.BuildingCity, new { htmlAttributes = new { @class = "form-control", placeholder = "Building City" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.BuildingState)
                        @Html.EditorFor(model => model.BuildingState, new { htmlAttributes = new { @class = "form-control", placeholder = "Building State", maxlength = 2 } })
                    </div>
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.BuildingZip)
                        @Html.EditorFor(model => model.BuildingZip, new { htmlAttributes = new { @class = "form-control", placeholder = "Building Zip", maxlength = 9 } })
                    </div>
                </div>
            </div>
            <div id="step-5" class="">
                <div class="form-group row">
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.YearBuilt)
                        <div id="year_built"></div>
                    </div>
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.RiskConstruction)
                        @Html.DropDownListFor(model => model.SelectedRiskConstruction, Model.RiskConstruction, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}


